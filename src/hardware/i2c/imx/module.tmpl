<?xml version="1.0"?>
<module name="i2c-imx">
	<type>Element</type>
	<classification>Driver</classification>

	<description>
            <short>i.MX I2C Driver</short>
	        <abstract>
	                <![CDATA[This Multi-master fast mode capable interface is supported in the Freescale i.MX BSPs.]]>
	        </abstract>
	</description>

	<supports>
		<availability>
			<cpu isa="arm">
			<byteOrder>le</byteOrder>
			</cpu>
		</availability>
	</supports>

	<source available="false">
		<location type="">.</location>
	</source>
	<GroupOwner>hw</GroupOwner>

	<contents>
		<component id="imx" generated="true">
			<location basedir="{cpu}/{endian}"
				 runtime="true">i2c-imx</location>
		</component>
	</contents>

	<requires>
		<part build="false" location="lib/i2c"/>
	</requires>

</module>
